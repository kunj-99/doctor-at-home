<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:ignore="ScopedStorage" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        tools:ignore="CoarseFineLocation" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheDoctorAtHomeUser"
        android:usesCleartextTraffic="true"
        tools:ignore="WrongManifestParent"
        tools:targetApi="n"
        android:enableOnBackInvokedCallback="true"> <!-- Added this line to enable OnBackInvokedCallback -->

        <!-- Activities -->
        <activity
            android:name=".VetAnimalsActivity"
            android:exported="false" />

        <activity
            android:name=".VetAppointmentActivity"
            android:exported="false" />

        <activity
            android:name=".SpacesItemDecoration"
            android:exported="false"
            tools:ignore="MissingClass" />

        <activity
            android:name=".RefundStatus"
            android:exported="false" />
        <activity
            android:name=".aboutus"
            android:exported="false" />
        <activity
            android:name=".policy"
            android:exported="false" />
        <activity
            android:name=".tarmsandcondition"
            android:exported="false" />
        <activity
            android:name=".settings"
            android:exported="false" />
        <activity
            android:name=".pathology_test"
            android:exported="false" />
        <activity
            android:name=".medical_riport"
            android:exported="false" />
        <activity
            android:name=".setting"
            android:exported="false" />
        <activity
            android:name=".suppor"
            android:exported="false" />
        <activity
            android:name=".payments"
            android:exported="false" />
        <activity
            android:name=".splash"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".complet_bill"
            android:exported="false" />
        <activity
            android:name=".track_doctor"
            android:exported="false" />
        <activity
            android:name=".cancle_appintment"
            android:exported="false" />
        <activity
            android:name=".pending_bill"
            android:exported="false" />
        <activity
            android:name=".doctor_details"
            android:exported="false" />
        <activity
            android:name=".available_doctor"
            android:exported="false" />
        <activity
            android:name=".book_form"
            android:exported="false" />
        <activity
            android:name=".diseases"
            android:exported="false" />
        <activity
            android:name=".Profile"
            android:exported="false" />
        <activity
            android:name=".otp_verification"
            android:exported="false" />
        <activity
            android:name=".Register"
            android:exported="false" />
        <activity
            android:name=".login"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- Meta-data for Google API -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"
            tools:replace="android:value" />

        <!-- Using legacy library -->
        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <!-- Firebase Messaging Service -->
        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>
