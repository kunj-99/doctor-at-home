<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="0dp">

        <!-- Profile Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bottom_curve"
            android:paddingTop="0dp">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/iv_back_arrow"
                android:layout_width="31dp"
                android:layout_height="28dp"
                android:layout_margin="20dp"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_back_arrow"
                android:contentDescription="Back Button"
                android:clickable="true"
                android:focusable="true" />

            <!-- Profile Picture & Name -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <!-- User Profile Image -->
                <ImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/pr_ic_profile_placeholder"
                    android:scaleType="centerCrop"
                    android:background="@drawable/rounded_square_background"
                    android:padding="2dp"
                    android:clipToOutline="true" />



                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Editable Form Fields with Titles -->

        <!-- Full Name -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp"

         />

        <EditText
            android:id="@+id/et_full_name"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_edit_text"
            android:hint="Enter Full Name"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"

            />

        <!-- Date of Birth -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Date of Birth"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_date_of_birth"
            android:layout_width="368dp"
            android:layout_height="wrap_content"

            android:hint="Enter Date of Birth"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Gender -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:prompt="@string/app_name" />

        <!-- Blood Group -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Blood Group"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <Spinner
            android:id="@+id/spinner_blood_group"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:prompt="@string/app_name" />

        <!-- Address -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Address"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_address"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:inputType="textPostalAddress"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Mobile Number -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Mobile Number"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_mobile"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Mobile Number"
            android:inputType="phone"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Email -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_email"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Email"
            android:inputType="textEmailAddress"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contact Name -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Emergency Contact Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_emergency_contact_name"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact Name"
            android:inputType="textPersonName"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Emergency Contact Number -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Emergency Contact Number"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_emergency_contact_number"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Emergency Contact Number"
            android:inputType="phone"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Medical History -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Medical History"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_medical_history"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Medical History"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Allergies -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_allergies"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Allergies"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="16dp" />

        <!-- Current Medications -->
        <TextView
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="Current Medications"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="4dp" />
        <EditText
            android:id="@+id/et_current_medications"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:hint="Enter Current Medications"
            android:inputType="textMultiLine"
            android:background="@drawable/bg_edit_text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:layout_marginBottom="30dp" />

        <!-- Update Profile Button -->
        <Button
            android:id="@+id/btn_update_profile"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/navy_blue"
            android:text="Update Profile"
            android:textColor="@color/white"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
