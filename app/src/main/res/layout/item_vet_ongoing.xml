<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E8EDF7"
    app:strokeWidth="1dp"
    app:cardCornerRadius="20dp"
    app:rippleColor="#1A6750FF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Pet Avatar with colored background -->
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="@drawable/bg_pet_avatar"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPet"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_pets_24"
                    android:tint="#FFFFFF"
                    android:contentDescription="@null"
                    tools:ignore="UseAppTint" />
            </LinearLayout>

            <!-- Pet Info -->
            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPetTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bruno"
                    android:textColor="#1A1D2B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/tvPetBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Golden Retriever • 3 years"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Skin allergy consultation"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Status Chip -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Ongoing"
                android:textColor="#065F46"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_ongoing"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F4F6"
            android:layout_marginVertical="16dp" />

        <!-- Meta Information Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Date & Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvWhen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu, 09 Oct • 02:15 PM"
                    android:textColor="#374151"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Veterinarian -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/doctor"
                    app:tint="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvVet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. K. Desai"
                    android:textColor="#374151"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Amount -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_amount_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹650"
                    android:textColor="#065F46"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Row - NEW ADDITION -->
        <!-- Buttons Row - Alternative Filled Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Track_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Track"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="#4361EE"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Cancel_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="@android:color/transparent"
                android:textColor="#DC2626"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:strokeColor="#DC2626"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>