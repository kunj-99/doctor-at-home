<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Header Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_curve"
        android:text="Your Bill"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Payment Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:radius="8dp"
                app:cardBackgroundColor="@color/white"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Left Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Bill Date -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bill Date"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_bill_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="8dp"
                            android:textColor="@color/black"
                            android:layout_marginBottom="10dp" />

                        <!-- Appointment ID -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appointment ID"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#765445367"
                            android:textColor="@color/black"
                            android:paddingTop="8dp"
                            android:layout_marginBottom="14dp" />

                        <!-- Time -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="84dp"
                                android:textSize="16dp"
                                android:layout_marginBottom="8dp"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <!-- Patient Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patient Name"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_patient_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vansh Mandanka"
                                android:textColor="@color/black"
                                android:textSize="16dp"
                                android:layout_marginLeft="25dp"
                                android:layout_marginBottom="8dp" />
                        </LinearLayout>

                        <!-- Doctor Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Doctor Name"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/tv_bill_doctor_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hetanshi Mandanka"
                                android:textColor="@color/black"
                                android:textSize="15dp"
                                android:layout_marginLeft="27dp"
                                android:layout_marginBottom="8dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Right Logo -->
                    <ImageView
                        android:layout_width="105dp"
                        android:layout_height="105dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/app_logo" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                android:radius="8dp"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Payment Amount -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Payment Amount"
                            android:layout_marginBottom="20dp"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_payment_amount_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="140dp"
                            android:text="₹ 500"
                        android:textColor="@color/black"
                        android:textSize="20dp"/>
                    </LinearLayout>

                    <!-- Consulting Fee -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Consulting Fee"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_consulting_fee_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 40"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="160dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(₹7 per kilometers)"
                        android:textSize="12sp"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/black"
                        android:layout_marginLeft="16dp" />

                    <!-- Distance (KM) -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_distance_km_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 km"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="203dp"/>
                    </LinearLayout>

                    <!-- Distance Charge -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distance Charge"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_distance_charge_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 0"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="145dp"/>
                    </LinearLayout>

                    <!-- GST -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GST"
                            android:layout_marginBottom="20dp"
                            android:textSize="15sp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_gst_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 20"
                            android:textSize="20dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="235dp"/>
                    </LinearLayout>

                    <!-- Divider -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="                                                 - - - - - - - - - - -"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <!-- Total Paid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Paid"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_total_paid_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹ 560"
                            android:textSize="25dp"
                            android:textColor="@color/black"
                            android:layout_marginLeft="165dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Payment Method RadioGroup -->
            <RadioGroup
                android:id="@+id/payment_method_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/payment_online"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Online Payment"
                    android:checked="true" /> <!-- Default selection -->

                <RadioButton
                    android:id="@+id/payment_offline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Offline Payment" />
            </RadioGroup>

            <Button
                android:id="@+id/pay_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/blue"
                android:text="Proceed to Payment"
                android:textColor="#FFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
