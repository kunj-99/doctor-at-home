<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF"
    tools:context=".fragment.HomeFragment">

    <!-- Hero Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Hero Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <!-- Patient Card -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_banner_wave">

                <!-- Background Illustration -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_first"
                    android:scaleType="centerCrop"
                    android:alpha="0.25" />

                <!-- Overlay Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Health,\nOur Priority"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/acqua_green"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book trusted doctors at your doorstep"
                        android:textSize="14sp"
                        android:textColor="#222222" />

                    <Button
                        android:id="@+id/btnBookPatient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/acqua_green"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </FrameLayout>

            <!-- Vet Card -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:clipToOutline="true"
                android:background="@drawable/bg_banner_wave">

                <!-- Background Illustration -->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/home_vet"
                    android:scaleType="centerCrop"
                    android:alpha="0.25" />

                <!-- Overlay Content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Petâ€™s Health,\nOur Priority"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/acqua_green"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book trusted veterinarians at your doorstep"
                        android:textSize="14sp"
                        android:textColor="#222222" />

                    <Button
                        android:id="@+id/btnBookVet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Book Now"
                        android:textColor="@android:color/white"
                        android:backgroundTint="@color/acqua_green"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>









        <!-- Horizontal RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginBottom="24dp" />

        <!-- Appointment Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1A237E"
            android:layout_marginBottom="12dp"
            android:paddingStart="8dp"
            android:letterSpacing="0.01" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appointmentStatRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="16dp" />

        <!-- Daily Health Tips Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Daily Health Tips"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:layout_marginBottom="12dp"
            android:paddingStart="8dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/tipRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp" />

        <!-- Top Rated Doctors Section -->
<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="ðŸ† Top Rated Doctors"-->
<!--            android:textSize="18sp"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginBottom="12dp" />-->

<!--        <androidx.recyclerview.widget.RecyclerView-->
<!--            android:id="@+id/topDoctorsRecyclerView"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:nestedScrollingEnabled="false"-->
<!--            android:layout_marginBottom="16dp" />-->

        <!-- Services Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ› ï¸ Services"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1B1B1B"
            android:layout_marginBottom="12dp"
            android:paddingStart="8dp" />


        <!-- Services Grid RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/servicesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="8dp"
            android:nestedScrollingEnabled="false"
            android:padding="4dp" />

        <!-- Articles Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Articles for you"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp" />

        <!-- Articles Horizontal RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/articlesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            android:nestedScrollingEnabled="false" />

        <!-- Footer Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="32dp"
            android:paddingBottom="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:gravity="center"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/ic_award_badge"
                android:contentDescription="Award Badge"
                android:layout_gravity="center"
                android:scaleType="fitCenter" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stay Healthy"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginTop="12dp"
                android:letterSpacing="0.01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="With care, from Doctor At Home"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>