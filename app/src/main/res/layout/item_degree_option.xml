<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:strokeColor="#F3F4F6"
    app:strokeWidth="1dp"
    app:rippleColor="#1A4361EE"
    android:foreground="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:background="@drawable/bg_degree_card_gradient">

        <!-- Icon Container -->
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/bg_icon_container"
            android:gravity="center"
            android:layout_gravity="center_vertical">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_degree_bachelor"
                android:contentDescription="@null"
                app:tint="#FFFFFF" />
        </LinearLayout>

        <!-- Text Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <!-- Title and Subtitle Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bachelor Vet Doctor"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="#1A1D2B"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.01" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="B.V.Sc and A.H."
                    android:textSize="14sp"
                    android:textColor="#4361EE"
                    android:textStyle="bold"
                    android:paddingTop="2dp" />

                <!-- NEW: Price -->
                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹500"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#0F9D58"
                    android:paddingTop="2dp"/>
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Entry to mid-level veterinary physicians with comprehensive animal care knowledge."
                android:textSize="13sp"
                android:textColor="#6B7280"
                android:lineSpacingExtra="4dp"
                android:paddingTop="8dp" />

        </LinearLayout>



    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
