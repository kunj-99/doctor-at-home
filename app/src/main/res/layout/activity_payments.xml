<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient_bg"
    tools:context=".payments">

    <!-- TOP: black status bar scrim (height set from WindowInsets in code) -->
    <View
        android:id="@+id/status_bar_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Main Floating Balance Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/balanceCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="24dp"
        android:translationZ="12dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#FAFAFA"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/status_bar_scrim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvBalanceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Balance"
                android:textColor="#1E88E5"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹00.00"
                android:textColor="#0D47A1"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvBalanceLabel"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- OLD recharge button retained (ID unchanged) but hidden -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRecharge"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:text="Recharge Wallet"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E88E5"
                app:icon="@drawable/add"
                app:iconTint="#BBDEFB"
                app:cornerRadius="16dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/tvTotalBalance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <!-- NEW: fixed amount quick actions -->
            <LinearLayout
                android:id="@+id/llQuickRecharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tvTotalBalance"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecharge50"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="₹50 Recharge"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1E88E5"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRecharge100"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="₹100 Recharge"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#1565C0"
                    app:cornerRadius="16dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- CREDIT / DEBIT Partition (SEGMENTED, not cards) -->
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="#1FFFFFFF"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/balanceCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CREDIT segment (uses existing ID cardCredit) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardCredit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:strokeColor="#2196F3"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:textSize="14sp"/>

                <!-- keep ID but hidden -->
                <TextView
                    android:id="@+id/tvEarned"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- DEBIT segment (uses existing ID cardDebit) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDebit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            app:cardElevation="0dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="12dp"
            app:strokeColor="#EF5350"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit"
                    android:textStyle="bold"
                    android:textColor="#B71C1C"
                    android:textSize="14sp"/>

                <!-- keep ID but hidden -->
                <TextView
                    android:id="@+id/tvSpent"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

    <!-- Transactions Label -->
    <TextView
        android:id="@+id/tvTransactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Recent Transactions"
        android:textColor="#0D47A1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransactions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="5dp"
        android:background="#3DB2DBF8"
        app:layout_constraintTop_toBottomOf="@id/tvTransactions"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar_scrim"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- BOTTOM: black nav bar scrim (height set from WindowInsets in code; 0 on gesture nav) -->
    <View
        android:id="@+id/navigation_bar_scrim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
