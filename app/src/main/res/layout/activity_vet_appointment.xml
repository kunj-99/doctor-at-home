<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8FAFD"
    android:orientation="vertical">

    <!-- App Bar with Rounded Bottom -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/appbar_rounded_bottom"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Book Vet Appointment"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="16dp"
        android:background="#F8FAFD">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Owner Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Owner Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_person" />

            <!-- Owner Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Enter your full name"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Owner Phone -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_phone"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., +91 98765 43210"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="phone"
                            android:maxLines="1"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Owner Pincode -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_location"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pincode"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerPincode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., 360001"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="number"
                            android:maxLines="1"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Owner Address -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_home"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etOwnerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:hint="House/Street, Area, City"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Animal Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animal Details"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_pets" />

            <!-- Animal Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pets"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Name"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAnimalName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., Bruno"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="text"
                            android:maxLines="1"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Animal Age -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar_month"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Age"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etAnimalAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="e.g., 3"
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="number"
                            android:maxLines="1"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Breed (Spinner) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_pets"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Breed"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spBreed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Visit or Vaccination -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment Type"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVisit"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Visit"
                    android:textAllCaps="false"
                    app:strokeColor="@color/acqua_green"
                    app:icon="@drawable/ic_description"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="1dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVaccination"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Vaccination"
                    android:textAllCaps="false"
                    app:strokeColor="@color/acqua_green"
                    app:iconPadding="8dp"
                    app:iconGravity="textStart" />
            </LinearLayout>

            <!-- Reason (Visible only when Visit selected) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardReason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_description"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reason"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etReason"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:gravity="top"
                            android:hint="Describe the reason for your visit or any symptoms..."
                            android:textSize="16sp"
                            android:textColor="#2D3748"
                            android:inputType="textMultiLine"
                            android:maxLines="5"
                            android:background="@null" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Vaccination Type (Visible only when Vaccination selected) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardVaccination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:tint="#4A5568" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vaccination Type"
                            android:textColor="#4A5568"
                            android:textSize="12sp"
                            android:layout_marginBottom="4dp" />

                        <Spinner
                            android:id="@+id/spVaccination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>



            <!-- Google Map Location -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#2D3748"
                android:layout_marginBottom="16dp"
                android:drawablePadding="8dp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:strokeColor="#E2E8F0"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnPickLocation"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:text="Use Current Location"
                        android:textAllCaps="false"
                        app:icon="@drawable/ic_location"
                        app:iconPadding="8dp"
                        app:iconGravity="textStart"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton" />

                    <!-- MAP VIEW -->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/mapView"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/tvLatLng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lat: -, Lng: -"
                        android:textColor="#2D3748"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <!-- Confirm Appointment Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:text="Confirm Appointment"
                android:textSize="16sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:icon="@drawable/out_check"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:backgroundTint="@color/acqua_green"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_marginBottom="24dp" />

            <ProgressBar
                android:id="@+id/progressSubmit"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
