<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/card_stroke_2"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:stateListAnimator="@animator/card_lift">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Background image with parallax effect -->
        <ImageView
            android:id="@+id/imgAnimal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/animal_image_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Gradient overlay for text readability -->
        <View
            android:id="@+id/gradientOverlay"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/gradient_bottom_to_top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Favorite icon -->
<!--        <ImageView-->
<!--            android:id="@+id/imgFavorite"-->
<!--            android:layout_width="24dp"-->
<!--            android:layout_height="24dp"-->
<!--            android:layout_margin="12dp"-->
<!--            android:src="@drawable/ic_favorite_border"-->
<!--            android:contentDescription="@string/add_to_favorites"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:tint="@android:color/white" />-->

        <!-- Name and species -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/tvAnimalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Animal"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvAnimalSpecies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Species"
                android:textSize="14sp"
                android:textColor="#CCFFFFFF"
                android:shadowColor="#80000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:ellipsize="end"
                android:maxLines="1" />

        </LinearLayout>

        <!-- Conservation status chip -->
<!--        <com.google.android.material.chip.Chip-->
<!--            android:id="@+id/chipStatus"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="12dp"-->
<!--            android:layout_marginTop="12dp"-->
<!--            app:chipBackgroundColor="@color/conservation_least_concern"-->
<!--            app:chipCornerRadius="8dp"-->
<!--            app:chipStrokeWidth="0dp"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            tools:text="LC" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>