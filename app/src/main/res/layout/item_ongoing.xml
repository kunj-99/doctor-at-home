<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@android:color/white"
    app:strokeColor="#E8EDF7"
    app:strokeWidth="1dp"
    app:cardCornerRadius="20dp"
    app:rippleColor="#1A6750FF">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:baselineAligned="false">

            <!-- Doctor Avatar with colored background -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/navy_blue"
                app:strokeWidth="2dp">

                <ImageView
                    android:id="@+id/civ_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/main1" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Doctor Info -->
            <LinearLayout
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Tranquilli"
                    android:textColor="#1A1D2B"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <TextView
                    android:id="@+id/doctor_specialty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specialist Medicine"
                    android:textColor="#6B7280"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp" />

                <TextView
                    android:id="@+id/doctor_experience_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience: 5 years"
                    android:textColor="#4B5563"
                    android:textSize="13sp"
                    android:layout_marginTop="6dp" />
            </LinearLayout>

            <!-- Status Chip -->
            <TextView
                android:id="@+id/doctor_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp"
                android:text="Available"
                android:textColor="#065F46"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_status_available"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F3F4F6"
            android:layout_marginVertical="16dp" />

        <!-- Meta Information Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Rating -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    app:tint="#6B7280"
                    android:layout_marginEnd="8dp" />

                <RatingBar
                    android:id="@+id/doctor_rating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4.5"
                    android:stepSize="0.5"
                    android:progressTint="#F59E0B" />
            </LinearLayout>

            <!-- Appointment Time -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="#6B7280"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAppointmentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thu, 09 Oct • 02:15 PM"
                    android:textColor="#374151"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif" />
            </LinearLayout>

            <!-- Consultation Fee -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_amount_pill"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp">

                <TextView
                    android:id="@+id/tvConsultationFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="₹650"
                    android:textColor="#065F46"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Buttons Row - UPDATED WITH PROFESSIONAL STYLING -->
        <!-- Buttons Row - Alternative Filled Style -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Track_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Track"
                style="@style/Widget.Material3.Button"
                android:backgroundTint="#4361EE"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/Cancel_button"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Cancel"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="@android:color/transparent"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="14sp"
                app:strokeColor="#DC2626"
                app:strokeWidth="1dp"
                app:cornerRadius="12dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>