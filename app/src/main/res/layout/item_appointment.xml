<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:layout_margin="8dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="18dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    app:rippleColor="#80CBC4"
    app:shapeAppearanceOverlay="@style/Shape.Round.XL">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Image -->
        <ImageView
            android:id="@+id/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="false"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_doctor_home"/>

        <!-- Soft bottom gradient for legible text -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:background="@drawable/black_text_overlay"/>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="14dp"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/degreeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Speciality"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Fee pill -->
            <TextView
                android:id="@+id/feeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:text="₹0.00/-"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/fee_pill_bg"/>
        </LinearLayout>

        <!-- Touch ripple (kept separate so image isn’t dimmed) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"/>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>
