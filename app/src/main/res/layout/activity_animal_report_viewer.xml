<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/root_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_report_photo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Header with Back Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <ImageButton
                        android:id="@+id/btn_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/left_arrow"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="back" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/tv_hospital_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clinic / Hospital"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_hospital_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Address"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Patient (Owner/Animal) Details -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_patient_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_patient_details_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="8dp"
                            android:text="Animal  Owner Details"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_patient_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Owner: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_patient_age"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Age: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_patient_sex"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Sex: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_patient_weight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Animal Weight: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_patient_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="Address: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_visit_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:text="Date: -"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Vital Signs -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_vital_signs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_vital_signs_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vital Signs"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_temperature"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Temperature: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_pulse"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pulse: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_spo2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SPO2: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_blood_pressure"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Blood Pressure: -"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_respiratory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Respiratory Rate: -"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Symptoms & Observations -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_symptoms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_symptoms_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Symptoms and Observations"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_symptoms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Medications -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_medications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_medications_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Prescribed Medications"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TableLayout
                            android:id="@+id/table_medications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:stretchColumns="1">

                            <TableRow>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="No"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Medicine Name"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Dosage"
                                    android:textStyle="bold"
                                    android:textSize="16sp" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Investigation & Doctor -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_investigations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_investigations_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Investigations Suggested (if any)"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_investigations_content"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_doctor_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_doctor_signature_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Doctor"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_doctor_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_report_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tv_report_details_header"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Report Details"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:paddingBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_report_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Report Type: -"
                            android:textSize="16sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Download Button -->
                <Button
                    android:id="@+id/btn_download"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Download"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/navy_blue"
                    android:layout_marginTop="16dp"
                    android:padding="16dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loader Overlay -->
    <LinearLayout
        android:id="@+id/loader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#AA000000"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait..."
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</FrameLayout>
