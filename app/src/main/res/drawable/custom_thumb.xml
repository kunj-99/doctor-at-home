<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer shadow (soft border for depth) -->
    <item>
        <shape android:shape="oval">
            <size android:width="28dp" android:height="28dp"/>
            <solid android:color="#1A000000" /> <!-- 10% black for soft outer glow -->
        </shape>
    </item>

    <!-- Inner thumb (core thumb circle) -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="50%"
                android:centerX="50%"
                android:centerY="50%"
                android:startColor="#2C2C2C"
                android:endColor="#000000"/>
            <stroke
                android:width="1.5dp"
                android:color="#444444" />
        </shape>
    </item>

</layer-list>
